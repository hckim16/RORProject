                <div class="form-control mr-sm-2 sm_style">
                    <%= f.select :country, all_country, prompt: 'SELECT COUNTRY:' %>
                </div>
                <%= f.submit 'Submit', class: "btn btn-light my-2 my-sm-0" %>
                <% end %>                  
