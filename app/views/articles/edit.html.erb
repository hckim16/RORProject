<div class="row"  style="padding-top:10%;">
    <div class="col"></div>
        <div class="col-md-7">

<h1>Edit Article!</h1>
<%= form_for @article do |f| %>
<div class="field" style="100%;">
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'form-control'  %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text, class: 'form-control'  %>
    </p>

    <p>
        <%= f.submit class:'btn btn-md btn-warning' %>
    </p>
</div>
<% end %>

        </div>  
    <div class="col"></div>
</div>